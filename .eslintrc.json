{
  "root": true,
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"]
  },
  "overrides": [
    {
      "files": ["apps/frontend/**/*"],
      "extends": ["next/core-web-vitals"]
    },
    {
      "files": ["apps/backend/**/*"],
      "extends": ["@typescript-eslint/recommended"]
    }
  ]
}
