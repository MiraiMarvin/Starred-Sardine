{
  "name": "ecommerce-boilerplate",
  "version": "1.0.0",
  "description": "E-commerce boilerplate avec Next.js et Prisma",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:push": "cd apps/backend && npx prisma db push",
    "db:migrate": "cd apps/backend && npx prisma migrate dev",
    "db:studio": "cd apps/backend && npx prisma studio"
  },
  "devDependencies": {
    "turbo": "^1.10.14",
    "typescript": "^5.2.2",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  },
  "packageManager": "npm@9.0.0"
}
